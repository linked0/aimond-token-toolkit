{
  "name": "backend",
  "packageManager": "yarn@4.4.1",
  "scripts": {
    "start": "nodemon --watch src --ext ts --exec ts-node -r ./src/config.ts src/index.ts",
    "start:test": "ENV_FILE=.env.bscTestnet nodemon --watch src --ext ts --exec ts-node -r ./src/config.ts src/index.ts",
    "build": "tsc",
    "seed": "ts-node -r dotenv/config scripts/seed.ts",
    "db:create": "ts-node -r dotenv/config scripts/createDbUser.ts",
    "db:setup": "ts-node -r dotenv/config scripts/setupDatabase.ts",
    "db:drop-tables": "ts-node -r dotenv/config scripts/dropObsoleteTables.ts"
  },
  "dependencies": {
    "ethers": "^6.15.0",
    "express": "^5.1.0",
    "keccak256": "^1.0.6",
    "merkletreejs": "^0.5.2",
    "pg": "^8.16.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "dotenv": "^17.2.2",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
